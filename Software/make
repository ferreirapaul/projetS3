CC = gcc
CPPFLAGS = `pkg-config --cflags sdl gtk+-3.0` -MMD -D__NO_INLINE__
CFLAGS = -Wall -Wextra -std=c99 -O1 -g -fsanitize=address
LDLFLAGS = -lm -lpthread 
LDLIBS = 'pkg-config --libs sdl SDL_image gtk+-3.0' -rdynamic


SRC = main.c
OBJ = $(SRC:%.c=.o)
EXE = ${SRC:.c=}

all: main

.PHONY: clean

clean:
	rm -rf $(BUILD)
	$(RM) $(EXEC)
